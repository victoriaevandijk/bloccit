<h1>Sign Up Confirmation</h1>

<div class="row">
    <div class="col-md-4">
        <h3>Are you sure these values are correct?</h3>
    <div class="row"></div>
        <h4><strong>Email: </strong> <%= @user.email %></h4>
        <h4><strong>Name: </strong> <%= @user.name %></h4>
    </div>
</div>

<div class="row">
    <div class="col-md-4", style= "width: auto;">
        <%= button_to "Yes", { :controller => 'users', :action => 'create', :params => params }, class: 'btn btn-success' %>
    </div>
    <div class="col-md-4">
        <%= button_to "No", new_user_path, class: 'btn btn-default' %>
    </div>
</div>
